    "additionalProperties": false,
    "definitions": {
        "style": {
            "type": "object",
            "description": "トークンの色とスタイル。",
            "properties": {
                "foreground": {
                    "type": "string",
                    "description": "トークンの前景色。",
                    "format": "color-hex",
                    "default": "#ff0000"
                },
                "background": {
                    "type": "string",
                    "deprecationMessage": "トークンの背景色は、現在サポートされていません。"
                },
                "fontStyle": {
                    "type": "string",
                    "description": "'斜体'、'太字'、'下線'、'取り消し線' のいずれかまたはこれらを組み合わせたもので、規則のすべてのフォント スタイルを設定します。一覧表示されていないすべてのスタイルが設定解除されます。空の文字列はすべてのスタイルの設定を解除します。",
                    "pattern": "^(\\s*(italic|bold|underline|strikethrough))*\\s*$",
                    "patternErrorMessage": "フォント スタイルは、'斜体'、'太字'、'下線'、'取り消し線' のいずれかまたはこれらを組み合わせたものである必要があります。空の文字列は、すべてのスタイルの設定を解除します。",
                    "defaultSnippets": [
                        {
                            "label": "なし (継承したスタイルを解除)",
                            "bodyText": "\"\""
                        },
                        {
                            "body": "italic"
                        },
                        {
                            "body": "bold"
                        },
                        {
                            "body": "underline"
                        },
                        {
                            "body": "strikethrough"
                        },
                        {
                            "body": "italic bold"
                        },
                        {
                            "body": "italic underline"
                        },
                        {
                            "body": "italic strikethrough"
                        },
                        {
                            "body": "bold underline"
                        },
                        {
                            "body": "bold strikethrough"
                        },
                        {
                            "body": "underline strikethrough"
                        },
                        {
                            "body": "italic bold underline"
                        },
                        {
                            "body": "italic bold strikethrough"
                        },
                        {
                            "body": "italic underline strikethrough"
                        },
                        {
                            "body": "bold underline strikethrough"
                        },
                        {
                            "body": "italic bold underline strikethrough"
                        }
                    ]
                },
                "bold": {
                    "type": "boolean",
                    "description": "フォント スタイルの太字を設定または解除します。'fontStyle ' が存在すると、この設定がオーバーライドされることにご注意ください。"
                },
                "italic": {
                    "type": "boolean",
                    "description": "フォント スタイルの斜体を設定または解除します。'fontStyle ' が存在すると、この設定がオーバーライドされることにご注意ください。"
                },
                "underline": {
                    "type": "boolean",
                    "description": "フォント スタイルの下線を設定または解除します。'fontStyle ' が存在すると、この設定がオーバーライドされることにご注意ください。"
                },
                "strikethrough": {
                    "type": "boolean",
                    "description": "フォント スタイルを取り消し線に設定するか設定を解除します。'fontStyle' が存在すると、この設定がオーバーライドされることに注意してください。"
                }
            },
            "defaultSnippets": [
                {
                    "body": {
                        "foreground": "${1:#FF0000}",
                        "fontStyle": "${2:bold}"
                    }
                }
            ]
        }
    }
